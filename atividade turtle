'''import turtle
import random

turtle = turtle.Turtle()

colors = ['purple', 'blue', 'yellow', 'green', 'pink','black','red','brown']#acrescentando:black,red,brown
for _ in range (12):
    color = random.choice(colors)
    turtle.color(color)
    turtle.forward(150)
    turtle.backward(150)
    turtle.right(45)
    turtle.color(color)
    turtle.forward(150)
    turtle.backward(150)
    turtle.right(30)#aumentando o numero de linhas em um angulo menor'''


