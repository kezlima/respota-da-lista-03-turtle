turtle.color('green')

for _ in range(4):
    turtle.left(90)
    turtle.backward(80)#mudando tamanho da lente

turtle.backward(50)
turtle.backward(80)#diminuindo a distância das lentes para 80
turtle.right(90)

for _ in range(3):
  turtle.forward(80)#mudando tamanho da lente
  turtle.left(90) '''


