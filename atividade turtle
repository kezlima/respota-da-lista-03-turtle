for _ in [1, 2, 3, 4]: 
   turtle.forward(100) #aumentando o quadrado
   turtle.right(90)
   color = random.choice(colors)
   turtle.color(color) 
  


for _ in [1, 2, 3]: 
     turtle.forward(90)#diminuindo a aba do envelope para 90
     turtle.right(120) 
     turtle.shape('turtle')
     color = random.choice(colors)
     turtle.color(color) '''


#questão 06

"""
Exercicios

1) Era para ser um envelope. Mas saiu errado. Corrija.
"""
#erro corrigido
'''import turtle

turtle = turtle.Turtle()
turtle.color('green')

for _ in [1, 2, 3]:
    turtle.forward(100)
    turtle.right(120)

for _ in [1, 2, 3, 4]:
  turtle.forward(100) 
  turtle.right(90)'''



